@model List<FinalHomeWork.ViewModels.HomeModels.CountryClass>
@{
    ViewBag.Title = "Countries List";
}

<h2>Countries List</h2>

<div class="row" style="padding-bottom: 10px;">
    <a href="/Home/CreateCountry" class="btn btn-success pull-right btn-sm">New Country</a>
</div>

<div class="row">
    <div class="table-responsive">
        <table class="table table-bordered table-hover table-striped" style={back}>
            <thead class="thead-dark">
                <tr>
                    <th class="text-center">#</th>
                    <th class=" text-center">Country Id</th>
                    <th class="text-center">Country Name</th>
                    <th class="text-center">Region Name</th>

                </tr>
            </thead>

            <tbody>
                @if (Model.Count() > 0)
                {
                    int sayac = 0;
                    foreach (var item in Model)
                    {
                        sayac++;
                        <tr class="">
                            <td class="text-center"><b>@sayac</b></td>
                            <td class="text-center">@item.country_id</td>
                            <td class="text-center">@item.country_name</td>
                            <td class="text-center">@item.region_name</td>
                            <td class="text-center">
                                @Html.ActionLink("Delete", "CountryDelete", new { id = item.country_id }, new { @class = "btn btn-danger", onclick = "return confirm('Do you really want to delete?')" })
                                <a href="/Home/EditCountry?id=@item.country_id" class="btn btn-primary btn-sm">Edit</a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6">No Record</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

