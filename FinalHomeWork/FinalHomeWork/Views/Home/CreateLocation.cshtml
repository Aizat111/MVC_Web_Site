
@model FinalHomeWork.ViewModels.HomeModels.LocationClass
@{
    ViewBag.Title = "LocationAdd";
}


<div class="row" style="padding: 30px 10px;">
    <form action="/Home/CreateLocation" method="post" enctype="multipart/form-data">
        <input type="hidden" name="location_id" value="@Model.location.location_id" />
        <div class="col-md-6">
            <div class="form-group">
                <label for="streetAddress">Street Address</label>
                <input type="text" hidden class="form-control" name="street_address" id="streetAddress" value="@Model.location.street_address" />
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="postalCode">Postal Code</label>
                <input type="text" class="form-control" name="postal_code" id="postalCode" value="@Model.location.postal_code" />
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="city">City</label>
                <input type="text" class="form-control" name="city" id="city" value="@Model.location.city" />
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="state">State Province</label>
                <input type="text" class="form-control" name="state_province" id="state" value="@Model.location.state_province" />
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="countryId">Region</label>
                <select class="form-control" name="country_id" id="countryId" required>
                    @if (Model.countries.Count() > 0)
                    {
                        foreach (var item in Model.countries)
                        {
                            if (Model.location.country_id == item.country_id)
                            {
                                <option value="@item.country_id" selected>@item.country_name</option>
                            }
                            else
                            {
                                <option value="@item.country_id">@item.country_name</option>
                            }

                        }
                    }
                </select>
            </div>
        </div>

        <div class="col-md-12">
            <button type="submit" class="btn btn-success pull-left">Save</button>
        </div>
    </form>
</div>





